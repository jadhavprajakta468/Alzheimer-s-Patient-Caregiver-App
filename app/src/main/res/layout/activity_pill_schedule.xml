<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    android:background="@drawable/pillschedule"
    android:tag="cards main container">


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pills Schedule"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />



    <!-- Container for dynamically loaded pill schedules -->
    <LinearLayout
        android:id="@+id/pill_schedule_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:padding="25dp"
        android:background="@drawable/container_background"
        android:elevation="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
    </LinearLayout>

    <!-- "Add Schedule" Button to Navigate to AddScheduleActivity -->
    <Button
        android:id="@+id/add_schedule_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add Schedule"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:textSize="16sp"
        android:onClick="openAddSchedule" />

</LinearLayout>
