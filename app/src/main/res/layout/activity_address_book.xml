<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDE7F6"
    android:padding="16dp"
    tools:context=".AddressBookActivity">


    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A148C"
        android:title="Address Book"
        android:titleTextColor="#FFFFFF"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="GuardianCare"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>


    <!-- Grid Layout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:padding="8dp">


        <!-- Office Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#D1C4E9"
            android:padding="16dp"
            android:elevation="4dp">


            <ImageView
                android:id="@+id/office"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_business_center_24"
                app:tint="#311B92" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Office"
                android:textColor="#311B92"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/office_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="edit"
                android:textColor="#311B92" />
        </LinearLayout>


        <!-- Bank Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#B2DFDB"
            android:padding="16dp"
            android:elevation="4dp">


            <ImageView
                android:id="@+id/bank"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_attach_money_24"
                app:tint="#004D40" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bank"
                android:textColor="#004D40"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/bank_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="edit"
                android:textColor="#004D40" />
        </LinearLayout>


        <!-- Market Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FFE0B2"
            android:padding="16dp"
            android:elevation="4dp">


            <ImageView
                android:id="@+id/market"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_shopping_basket_24"
                app:tint="#E65100" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Market"
                android:textColor="#E65100"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/market_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="edit"
                android:textColor="#E65100" />
        </LinearLayout>


        <!-- Home Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#F8BBD0"
            android:padding="16dp"
            android:elevation="4dp">


            <ImageView
                android:id="@+id/home"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_home_24"
                app:tint="#880E4F" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Home"
                android:textColor="#880E4F"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/home_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="edit"
                android:textColor="#880E4F" />
        </LinearLayout>


    </GridLayout>


</LinearLayout>
